<Window x:Class="Occop.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Occop.UI.Views"
        xmlns:controls="clr-namespace:Occop.UI.Controls"
        Title="Occop - 工具管理中心"
        Height="700"
        Width="1000"
        MinHeight="600"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Icon="Assets/app.ico">

    <Window.Resources>
        <!-- 定义主窗口样式 -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="SubHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="StatusCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Direction="315" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#21618C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDC3C7"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#3498DB"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3498DB"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="BorderBrush" Value="#BDC3C7"/>
                                <Setter Property="Foreground" Value="#BDC3C7"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部标题栏 -->
        <Border Grid.Row="0"
                Background="#F8F9FA"
                BorderBrush="#DEE2E6"
                BorderThickness="0,0,0,1"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Occop"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#2C3E50"
                               Margin="0,0,10,0"/>
                    <TextBlock Text="工具管理中心"
                               FontSize="16"
                               Foreground="#7F8C8D"
                               VerticalAlignment="Bottom"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding UserDisplayName}"
                               FontSize="14"
                               Foreground="#34495E"
                               Margin="0,0,15,0"
                               VerticalAlignment="Center"/>
                    <Button Content="设置"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding OpenSettingsCommand}"
                            Padding="12,6"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 主要内容区域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- 状态面板标题和控制 -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="系统状态" Style="{StaticResource HeaderStyle}" Margin="0,0,15,0"/>
                        <Button Content="刷新状态"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Command="{Binding StatusViewModel.RefreshAllStatusCommand}"
                                Padding="10,6"
                                FontSize="12"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- 通知指示器 -->
                        <Border Background="#E74C3C"
                                CornerRadius="10"
                                Padding="8,4"
                                Margin="10,0"
                                Visibility="{Binding StatusViewModel.HasUnreadNotifications, Converter={x:Static BooleanToVisibilityConverter.Instance}}">
                            <TextBlock Text="{Binding StatusViewModel.UnreadNotificationCount}"
                                       Foreground="White"
                                       FontSize="12"
                                       FontWeight="Bold"/>
                        </Border>

                        <Button Content="通知"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Command="{Binding StatusViewModel.ToggleStatusPanelCommand}"
                                Padding="10,6"
                                FontSize="12"/>
                    </StackPanel>
                </Grid>

                <!-- 状态指示器网格 -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 认证状态 -->
                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource StatusCardStyle}">
                        <controls:StatusIndicator Status="{Binding StatusViewModel.AuthenticationStatus}"
                                                ShowTitle="True"
                                                ShowMessage="True"
                                                ShowDetails="False"
                                                ShowTimestamp="False"/>
                    </Border>

                    <!-- Claude工具状态 -->
                    <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource StatusCardStyle}">
                        <controls:StatusIndicator Status="{Binding StatusViewModel.ClaudeStatus}"
                                                ShowTitle="True"
                                                ShowMessage="True"
                                                ShowDetails="False"
                                                ShowTimestamp="False"/>
                    </Border>

                    <!-- 系统清理状态 -->
                    <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource StatusCardStyle}">
                        <controls:StatusIndicator Status="{Binding StatusViewModel.SystemCleanupStatus}"
                                                ShowTitle="True"
                                                ShowMessage="True"
                                                ShowDetails="False"
                                                ShowTimestamp="False"/>
                    </Border>

                    <!-- 网络状态 -->
                    <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource StatusCardStyle}">
                        <controls:StatusIndicator Status="{Binding StatusViewModel.NetworkStatus}"
                                                ShowTitle="True"
                                                ShowMessage="True"
                                                ShowDetails="False"
                                                ShowTimestamp="False"/>
                    </Border>
                </Grid>

                <!-- 扩展状态面板 -->
                <Border Style="{StaticResource StatusCardStyle}"
                        Visibility="{Binding StatusViewModel.IsStatusPanelExpanded, Converter={x:Static BooleanToVisibilityConverter.Instance}}"
                        Margin="10,20,10,10">
                    <StackPanel>
                        <TextBlock Text="详细状态信息" Style="{StaticResource SubHeaderStyle}"/>

                        <!-- 最近通知列表 -->
                        <StackPanel Margin="0,10">
                            <TextBlock Text="最近通知"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#34495E"
                                       Margin="0,0,0,10"/>

                            <ItemsControl ItemsSource="{Binding StatusViewModel.RecentNotifications}"
                                          MaxHeight="200">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F8F9FA"
                                                BorderBrush="#DEE2E6"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Padding="10"
                                                Margin="0,2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- 通知类型图标 -->
                                                <Ellipse Grid.Column="0"
                                                         Width="8" Height="8"
                                                         Margin="0,0,10,0"
                                                         VerticalAlignment="Top"
                                                         Fill="#3498DB"/>

                                                <!-- 通知内容 -->
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Title}"
                                                               FontSize="12"
                                                               FontWeight="SemiBold"
                                                               Foreground="#2C3E50"/>
                                                    <TextBlock Text="{Binding Message}"
                                                               FontSize="11"
                                                               Foreground="#7F8C8D"
                                                               TextWrapping="Wrap"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>

                                                <!-- 时间戳 -->
                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}"
                                                           FontSize="10"
                                                           Foreground="#95A5A6"
                                                           VerticalAlignment="Top"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- 操作按钮 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button Content="标记全部已读"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Command="{Binding StatusViewModel.MarkAllNotificationsReadCommand}"
                                    Padding="10,6"
                                    FontSize="12"/>
                            <Button Content="清除通知"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Command="{Binding StatusViewModel.ClearNotificationsCommand}"
                                    Padding="10,6"
                                    FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- 底部状态栏 -->
        <Border Grid.Row="2"
                Background="#F8F9FA"
                BorderBrush="#DEE2E6"
                BorderThickness="0,1,0,0"
                Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="状态："
                               FontSize="12"
                               Foreground="#7F8C8D"/>
                    <TextBlock Text="{Binding StatusViewModel.GlobalStatusMessage}"
                               FontSize="12"
                               Foreground="#2C3E50"
                               Margin="5,0,0,0"/>
                </StackPanel>

                <TextBlock Grid.Column="1"
                           Text="{Binding ApplicationVersion}"
                           FontSize="12"
                           Foreground="#7F8C8D"/>
            </Grid>
        </Border>
    </Grid>
</Window>
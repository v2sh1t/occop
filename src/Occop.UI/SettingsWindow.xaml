<Window x:Class="Occop.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Occop.UI.ViewModels"
        xmlns:cvt="clr-namespace:Occop.UI.Converters"
        Title="设置 - Occop"
        Height="750"
        Width="900"
        MinHeight="650"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Icon="Assets/app.ico"
        Background="#F5F6FA">

    <Window.Resources>
        <!-- 转换器 -->
        <cvt:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <cvt:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>

        <!-- 样式定义 -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#5A6C7D"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style x:Key="SettingCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#21618C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDC3C7"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#3498DB"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E8F4FC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D1E9F6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#BDC3C7"/>
                                <Setter Property="BorderBrush" Value="#BDC3C7"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C0392B"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#A93226"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDC3C7"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E1E5E9" BorderThickness="0,0,0,1" Padding="30,20">
            <StackPanel>
                <TextBlock Text="设置" Style="{StaticResource HeaderStyle}"/>
                <TextBlock Text="{Binding StatusMessage}" FontSize="12" Foreground="#7F8C8D"/>
            </StackPanel>
        </Border>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30,20">
            <StackPanel>
                <!-- Appearance Settings -->
                <TextBlock Text="外观设置" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Style="{StaticResource SettingCardStyle}">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="主题：" Style="{StaticResource LabelStyle}"/>
                            <ComboBox Grid.Column="1" ItemsSource="{Binding ThemeOptions}"
                                     SelectedItem="{Binding SelectedTheme}" Width="200" HorizontalAlignment="Left"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="窗口不透明度：" Style="{StaticResource LabelStyle}"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Slider Width="200" Minimum="0.5" Maximum="1.0" TickFrequency="0.05"
                                       Value="{Binding Settings.WindowOpacity}" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Settings.WindowOpacity, StringFormat={}{0:P0}}"
                                          Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="启用动画：" Style="{StaticResource LabelStyle}"/>
                            <CheckBox Grid.Column="1" IsChecked="{Binding Settings.EnableAnimations}"
                                     Content="启用界面动画效果" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Startup Settings -->
                <TextBlock Text="启动设置" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Style="{StaticResource SettingCardStyle}">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="开机启动：" Style="{StaticResource LabelStyle}"/>
                            <CheckBox Grid.Column="1" IsChecked="{Binding Settings.StartWithWindows}"
                                     Content="随Windows系统启动" VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="启动窗口状态：" Style="{StaticResource LabelStyle}"/>
                            <ComboBox Grid.Column="1" ItemsSource="{Binding StartupStateOptions}"
                                     SelectedItem="{Binding SelectedStartupState}" Width="200" HorizontalAlignment="Left"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="检查更新：" Style="{StaticResource LabelStyle}"/>
                            <CheckBox Grid.Column="1" IsChecked="{Binding Settings.CheckForUpdatesOnStartup}"
                                     Content="启动时检查更新" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Notification Settings -->
                <TextBlock Text="通知设置" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Style="{StaticResource SettingCardStyle}">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="启用通知：" Style="{StaticResource LabelStyle}"/>
                            <CheckBox Grid.Column="1" IsChecked="{Binding Settings.EnableNotifications}"
                                     Content="显示应用程序通知" VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="声音通知：" Style="{StaticResource LabelStyle}"/>
                            <CheckBox Grid.Column="1" IsChecked="{Binding Settings.EnableSoundNotifications}"
                                     Content="播放通知声音" VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="托盘通知：" Style="{StaticResource LabelStyle}"/>
                            <CheckBox Grid.Column="1" IsChecked="{Binding Settings.EnableTrayNotifications}"
                                     Content="显示系统托盘气球提示" VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="最低优先级：" Style="{StaticResource LabelStyle}"/>
                            <ComboBox Grid.Column="1" ItemsSource="{Binding PriorityOptions}"
                                     SelectedItem="{Binding SelectedMinimumPriority}" Width="200" HorizontalAlignment="Left"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- System Tray Settings -->
                <TextBlock Text="系统托盘" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Style="{StaticResource SettingCardStyle}">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="显示托盘图标：" Style="{StaticResource LabelStyle}"/>
                            <CheckBox Grid.Column="1" IsChecked="{Binding Settings.ShowTrayIcon}"
                                     Content="在系统托盘显示图标" VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="最小化到托盘：" Style="{StaticResource LabelStyle}"/>
                            <CheckBox Grid.Column="1" IsChecked="{Binding Settings.MinimizeToTray}"
                                     Content="最小化时隐藏到系统托盘" VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="关闭到托盘：" Style="{StaticResource LabelStyle}"/>
                            <CheckBox Grid.Column="1" IsChecked="{Binding Settings.CloseToTray}"
                                     Content="关闭窗口时保持在托盘运行" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Authentication Settings -->
                <TextBlock Text="认证设置" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Style="{StaticResource SettingCardStyle}">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="会话超时（分钟）：" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="1" Text="{Binding Settings.SessionTimeoutMinutes}"
                                    Width="100" HorizontalAlignment="Left"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="最大失败次数：" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="1" Text="{Binding Settings.MaxFailedAttempts}"
                                    Width="100" HorizontalAlignment="Left"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="锁定时长（分钟）：" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="1" Text="{Binding Settings.LockoutDurationMinutes}"
                                    Width="100" HorizontalAlignment="Left"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="记住认证：" Style="{StaticResource LabelStyle}"/>
                            <CheckBox Grid.Column="1" IsChecked="{Binding Settings.RememberAuthentication}"
                                     Content="在会话之间保持登录状态" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Logging Settings -->
                <TextBlock Text="日志设置" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Style="{StaticResource SettingCardStyle}">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="日志级别：" Style="{StaticResource LabelStyle}"/>
                            <ComboBox Grid.Column="1" ItemsSource="{Binding LogLevelOptions}"
                                     SelectedItem="{Binding SelectedLogLevel}" Width="200" HorizontalAlignment="Left"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="文件日志：" Style="{StaticResource LabelStyle}"/>
                            <CheckBox Grid.Column="1" IsChecked="{Binding Settings.EnableFileLogging}"
                                     Content="启用日志文件记录" VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="日志保留天数：" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="1" Text="{Binding Settings.LogRetentionDays}"
                                    Width="100" HorizontalAlignment="Left"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Advanced Settings -->
                <TextBlock Text="高级设置" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Style="{StaticResource SettingCardStyle}">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="调试模式：" Style="{StaticResource LabelStyle}"/>
                            <CheckBox Grid.Column="1" IsChecked="{Binding Settings.EnableDebugMode}"
                                     Content="启用调试模式（重启后生效）" VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="遥测：" Style="{StaticResource LabelStyle}"/>
                            <CheckBox Grid.Column="1" IsChecked="{Binding Settings.EnableTelemetry}"
                                     Content="发送匿名使用数据以改进产品" VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="语言：" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Column="1" Text="{Binding Settings.Language}"
                                      Style="{StaticResource LabelStyle}" Foreground="#2C3E50"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Validation Errors -->
                <Border Background="#FADBD8" BorderBrush="#E74C3C" BorderThickness="1"
                       CornerRadius="4" Padding="15" Margin="0,10,0,0"
                       Visibility="{Binding ValidationErrors.Count, Converter={StaticResource CountToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="验证错误：" FontWeight="SemiBold" Foreground="#E74C3C" Margin="0,0,0,5"/>
                        <ItemsControl ItemsSource="{Binding ValidationErrors}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="#C0392B" Margin="0,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Actions -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E1E5E9" BorderThickness="0,1,0,0" Padding="30,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Side Buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="导出设置" Style="{StaticResource SecondaryButtonStyle}"
                           Command="{Binding ExportSettingsCommand}"/>
                    <Button Content="导入设置" Style="{StaticResource SecondaryButtonStyle}"
                           Command="{Binding ImportSettingsCommand}"/>
                    <Button Content="恢复默认" Style="{StaticResource DangerButtonStyle}"
                           Command="{Binding ResetSettingsCommand}"/>
                </StackPanel>

                <!-- Right Side Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="取消" Style="{StaticResource SecondaryButtonStyle}"
                           Command="{Binding CancelCommand}" Click="CancelButton_Click"/>
                    <Button Content="保存" Style="{StaticResource PrimaryButtonStyle}"
                           Command="{Binding SaveSettingsCommand}" Click="SaveButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3" Background="#80000000"
               Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                <TextBlock Text="处理中..." Foreground="White" FontSize="16"
                          Margin="0,10,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

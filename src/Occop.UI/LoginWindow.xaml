<Window x:Class="Occop.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Occop.UI.Views"
        Title="Occop - GitHub OAuth认证"
        Height="700"
        Width="900"
        MinHeight="600"
        MinWidth="700"
        WindowStartupLocation="CenterScreen"
        Icon="Assets/app.ico"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- 定义窗口样式 -->
        <Style x:Key="WindowTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0"
                Background="#F8F9FA"
                BorderBrush="#DEE2E6"
                BorderThickness="0,0,0,1">
            <TextBlock Text="Occop - 系统认证"
                       Style="{StaticResource WindowTitleStyle}"/>
        </Border>

        <!-- 认证内容区域 -->
        <views:AuthenticationView x:Name="AuthenticationView"
                                  Grid.Row="1"/>
    </Grid>
</Window>
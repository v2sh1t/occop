<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs\internal-nlog-${shortdate}.log"
      throwConfigExceptions="true">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- 定义通用布局 Define common layouts -->
  <variable name="defaultLayout" value="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message}|${exception:format=tostring}|${all-event-properties}" />
  <variable name="structuredLayout" value="${longdate}|${uppercase:${level}}|${logger}|correlation_id=${scopeproperty:correlation_id}|session_id=${scopeproperty:session_id}|user_id=${scopeproperty:user_id}|operation=${scopeproperty:operation_type}|${message}|${exception:format=tostring}" />
  <variable name="performanceLayout" value="${longdate}|PERFORMANCE|${logger}|${scopeproperty:metric_name}=${scopeproperty:metric_value} ${scopeproperty:metric_unit}|${message}" />

  <!-- the targets to write to -->
  <targets>
    <!-- 所有日志（包括第三方库）All logs including third-party libraries -->
    <target xsi:type="File" name="allfile"
            fileName="logs\all-${shortdate}.log"
            layout="${defaultLayout}"
            archiveFileName="logs\archive\all-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="30"
            concurrentWrites="true"
            keepFileOpen="false" />

    <!-- 应用程序日志（按分类分离）Application logs separated by category -->
    <target xsi:type="File" name="applicationLog"
            fileName="logs\application-${shortdate}.log"
            layout="${structuredLayout}"
            archiveFileName="logs\archive\application-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="30"
            concurrentWrites="true" />

    <!-- 安全日志 Security logs -->
    <target xsi:type="File" name="securityLog"
            fileName="logs\security-${shortdate}.log"
            layout="${structuredLayout}"
            archiveFileName="logs\archive\security-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="90"
            concurrentWrites="true" />

    <!-- 性能日志 Performance logs -->
    <target xsi:type="File" name="performanceLog"
            fileName="logs\performance-${shortdate}.log"
            layout="${performanceLayout}"
            archiveFileName="logs\archive\performance-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="30"
            concurrentWrites="true" />

    <!-- 错误日志 Error logs -->
    <target xsi:type="File" name="errorLog"
            fileName="logs\errors-${shortdate}.log"
            layout="${structuredLayout}"
            archiveFileName="logs\archive\errors-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="90"
            concurrentWrites="true" />

    <!-- API日志 API logs -->
    <target xsi:type="File" name="apiLog"
            fileName="logs\api-${shortdate}.log"
            layout="${structuredLayout}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}"
            archiveFileName="logs\archive\api-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="30"
            concurrentWrites="true" />

    <!-- 审计日志 Audit logs -->
    <target xsi:type="File" name="auditLog"
            fileName="logs\audit-${shortdate}.log"
            layout="${structuredLayout}"
            archiveFileName="logs\archive\audit-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="365"
            concurrentWrites="true" />

    <!-- 控制台输出（彩色）Console output (colored) -->
    <target xsi:type="ColoredConsole" name="console"
            layout="${time}|${uppercase:${level}}|${logger:shortName=true}|${message}|${exception:format=message}"
            useDefaultRowHighlightingRules="true" />

    <!-- 调试输出 Debug output -->
    <target xsi:type="Debugger" name="debugger"
            layout="${time}|${level}|${logger}|${message}|${exception}" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!-- 过滤掉Microsoft和System的噪音日志 Filter out noisy Microsoft and System logs -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />
    <logger name="System.Threading.*" maxlevel="Info" final="true" />

    <!-- 所有日志写入allfile All logs to allfile -->
    <logger name="*" minlevel="Trace" writeTo="allfile" />

    <!-- 安全相关日志 Security-related logs -->
    <logger name="Occop.Security*" minlevel="Debug" writeTo="securityLog" />
    <logger name="Occop.Authentication*" minlevel="Debug" writeTo="securityLog" />

    <!-- 性能日志 Performance logs -->
    <logger name="Occop.Performance*" minlevel="Trace" writeTo="performanceLog" />

    <!-- API日志 API logs -->
    <logger name="Occop.API*" minlevel="Debug" writeTo="apiLog" />

    <!-- 审计日志 Audit logs -->
    <logger name="Occop.Audit*" minlevel="Trace" writeTo="auditLog" />

    <!-- 错误和严重错误单独记录 Errors and critical separately -->
    <logger name="*" minlevel="Error" writeTo="errorLog" />

    <!-- 应用程序日志 Application logs -->
    <logger name="Occop.*" minlevel="Debug" writeTo="applicationLog" />

    <!-- 控制台输出（仅Info及以上）Console output (Info and above only) -->
    <logger name="*" minlevel="Info" writeTo="console" />

    <!-- 调试模式下输出到调试器 Debug mode output to debugger -->
    <logger name="Occop.*" minlevel="Debug" writeTo="debugger" />
  </rules>
</nlog>